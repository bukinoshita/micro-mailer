{
  "name": "micro-mailer",
  "version": "0.0.0-canary.0",
  "description": "A microservice to send simple email templates",
  "main": "index.js",
  "repository": "bukinoshita/micro-mailer",
  "author": "bukinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "micro",
    "dev": "micro-dev . -p 4000",
    "lint": "xo --quiet",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "mailgun.js": "^2.0.1",
    "micro": "^9.3.3",
    "micro-cors": "^0.1.0",
    "querystring": "^0.2.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^3.1.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "micro-dev": "^3.0.0",
    "prettier": "^1.14.3",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": "prettier",
    "rules": {
      "unicorn/throw-new-error": 0,
      "unicorn/new-for-builtins": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --semi false --single-quote --write",
      "yarn lint",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8"
  }
}
